<% if(typeof alert != "undefined") { %>
    <script>
        Swal.fire({
            position: '<%= alertPosition %>',
            title: '<%= alertTitle  %>',
            icon: '<%= alertIcon %>',
            text: '<%= alertText %>',
            showConfirmButton:'<%= showConfirmButton %>',
            timer:  '<%= timer %>',
            
        }).then(()=>{
            window.location= '/<%= ruta %>'
        })
    </script>
<% } %>

<% if(typeof validacionesErrores != "undefined") { %>
    <% validacionesErrores.forEach( (validacionesErrores) => { %> 
        <script>
            Swal.fire({
                position: '<%= alertPosition %>',
                icon: '<%= alertIcon %>',
                title: '<%= validacionesErrores.msg %>',
                showConfirmButton:'<%= showConfirmButton %>',
                timer:  '<%= timer %>',
           }).then(()=>{
               window.location= '/<%= ruta %>'
           })
       </script>

    <% }) %> 
<% } %> 
    
<!-- Fin alerta -->